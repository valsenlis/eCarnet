<%- model_class = Medecin -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nom) %>:</strong></dt>
  <dd><%= @medecin.nom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lieu) %>:</strong></dt>
  <dd><%= @medecin.lieu %></dd>
  <dt><strong><%= model_class.human_attribute_name(:specialite) %>:</strong></dt>
  <dd><%= @medecin.specialite %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              medecins_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_medecin_path(@medecin), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              medecin_path(@medecin),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
